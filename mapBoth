
let mapBoth : ∀(a : Type) → ∀(b : Type) → ∀(c : Type) → ∀(d : Type)
         → (a → c) → (b → d) → ./Either a b → ./Either c d
    = λ(a : Type) → λ(b : Type) → λ(c : Type) → λ(d : Type) →
      λ(f : a → c) → λ(g : b → d) → λ(e : ./Either a b) →
      let handlers =
            { Left  = λ(a : a) → < Left = f a | Right : d >
            , Right = λ(b : b) → < Left : c | Right = g b >
            }
      in merge handlers e : ./Either c d
in mapBoth
